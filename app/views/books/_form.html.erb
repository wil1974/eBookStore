<%= simple_form_for(@book, html: {class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name, required: true, label: false, placeholder: "Book Name", input_html: {class: 'form-control'} %>
    <%= f.input :author, required: true, label: false, placeholder: "Author Name", input_html: {class: 'form-control'}  %>
    <%= f.input :description, required: true, label: false, placeholder: "Book Synopsis", input_html: {class: 'form-control'}  %>
    <br>
    <%= f.input :price, required: true, label: false, placeholder: "Price", input_html: {class: 'form-control'}  %>

    <%= f.input :image %>
    <%= f.input :resource %>

    <div class="text-center">
      <%= f.input :availability, required: false, as: :boolean, boolean_style: :inline %>
    </div>

    <%= f.button :submit, class: "btn btn-primary btn-block" %>
<% end %>
